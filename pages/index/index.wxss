
/* 轮播图 */
.swipercontainer{
  height: 500rpx;
}
.swiper{
  height: 100%;
}
.swiperimg{
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

/*导航区*/
.logincontainer{
  box-shadow: 2px 2px 10px #888888;
  border-radius: 20rpx;
  padding: 10rpx 10rpx;
  margin: 20rpx auto;
  width: 680rpx;
}
.logincontainer image{
  width: 50rpx;
  height: 50rpx;
}
/* 搜索区 */
.search_container{
  display: flex;
  margin: 50rpx 20rpx 0 20rpx;
  flex-direction: row;
  border: 1px solid;
  border-radius: 15rpx;
  align-items: center;
}
.search_image{
  width: 50rpx;
  height: 50rpx;
  /* margin-top: 12rpx; */
}
.search_input{
  flex: 1;
  min-height: 70rpx;
  padding-left: 20rpx;
}
/* 导航区 */
.navcontainer{
  display: flex;
  /* 平均分配 */
  justify-content: space-between;
  width: 700rpx;
  margin: 20rpx auto 0;
}
.nav_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
}
.nav_item_image{
  width: 100%;
  height: 100%;
}
/* 推荐区 */
.recommend_container{
  padding: 0 20rpx;
  margin-top: 30rpx;
}
.recommend_title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}